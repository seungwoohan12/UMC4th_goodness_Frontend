<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:baselineAligned="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="166dp"
                android:layout_height="147dp"
                app:srcCompat="@android:drawable/ic_menu_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="254dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_individual"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_marginEnd="56dp"
                android:text="개인"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="#3281F8"
                app:cornerRadius="70sp" />

            <Button
                android:id="@+id/btn_organ"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:text="단체             (동아리/기업)"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="#3281F8"
                app:cornerRadius="70dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="회원가입"
                android:textColor="#000000"
                android:textSize="12sp"
                android:visibility="visible"
                app:backgroundTint="#FFFFFF" />

            <Button
                android:id="@+id/btn_idPwFind"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="아이디 찾기/비밀번호 찾기"
                android:textColor="#000000"
                android:textSize="12sp"
                android:visibility="visible"
                app:backgroundTint="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_firstWatch"
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="먼저 들어가볼래요!"
                android:textColor="#000000"
                android:textSize="12sp"
                android:visibility="visible"
                app:backgroundTint="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_use"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="이용약관"
                android:textColor="#000000"
                android:textSize="12sp"
                android:visibility="visible"
                app:backgroundTint="#FFFFFF" />

            <Button
                android:id="@+id/btn_policy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="개인정보 처리방침"
                android:textColor="#000000"
                android:textSize="12sp"
                android:visibility="visible"
                app:backgroundTint="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>