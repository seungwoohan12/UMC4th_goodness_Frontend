<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".RegisterActivity"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="11dp">

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/baseline_clear_24" />

    <Button
        android:id="@+id/btn_individual"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="480dp"
        android:cursorVisible="true"
        android:text="개인"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="#3281F8"
        app:cornerRadius="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_organ"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="480dp"
        android:cursorVisible="true"
        android:text="단체(동아리/기업)"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="#3281F8"
        app:cornerRadius="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_individual" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="170dp"
        android:layout_height="49dp"
        android:layout_marginTop="22dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_organ">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="동아리"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="기업"
            android:visibility="visible" />
    </RadioGroup>

    <Button
        android:id="@+id/button27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="다음"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:backgroundTint="#3281F8"
        app:cornerRadius="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>